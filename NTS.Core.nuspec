<?xml version="1.0"?>
<package xmlns="http://schemas.microsoft.com/packaging/2010/07/nuspec.xsd">
  <metadata>
    <id>NetTopologySuite.Core</id>
    <version>$version$</version>
    <title>NTS - Topology Suite</title>
    <authors>NetTopologySuite - Team</authors>
    <owners>NetTopologySuite - Team</owners>
    <licenseUrl>https://opensource.org/licenses/BSD-3-Clause</licenseUrl>
    <projectUrl>https://github.com/NetTopologySuite/NetTopologySuite</projectUrl>
    <requireLicenseAcceptance>true</requireLicenseAcceptance>
    <description>
      The NTS Topology Suite is an API for modelling and manipulating 2-dimensional linear geometry. It provides numerous geometric predicates and functions. NTS conforms to the Simple Features Specification.
      This package references GeoAPI.
    </description>
    <summary>NTS Topology Suite is a direct-port of all the functionalities offered by JTS Topology Suite</summary>
    <tags>NTS Topology OGC SFS</tags>
    <copyright>Copyright 2007-2018</copyright>
    <language>en-US</language>
    <frameworkAssemblies>
      <frameworkAssembly assemblyName="System" targetFramework="net35-client,net40-client,net403-client,net45" />
      <frameworkAssembly assemblyName="System.Xml" targetFramework="net35-client,net40-client,net403-client,net45" />

      <frameworkAssembly assemblyName="System.Core" targetFramework="net35-client,net40-client,net403-client,net45" />

      <frameworkAssembly assemblyName="System.Xml.Linq" targetFramework="net35-client,net40-client,net403-client,net45" />
    </frameworkAssemblies>
    <dependencies>
      <dependency id="GeoAPI.Core" version="[$geoapiversion$, 3.0.0-A)" />
    </dependencies>
  </metadata>
  <files>
    <file src="NetTopologySuite.Common.props" target="src" />
    <file src="SharedAssemblyVersion.cs" target="src" />
    <file src="NetTopologySuite\**" exclude="NetTopologySuite\obj\**" target="src\NetTopologySuite" />

    <file src="Release\AnyCPU\**\NetTopologySuite.deps.json" target="lib" />
    <file src="Release\AnyCPU\**\NetTopologySuite.dll" target="lib" />
    <file src="Release\AnyCPU\**\NetTopologySuite.pdb" target="lib" />
    <file src="Release\AnyCPU\**\NetTopologySuite.xml" target="lib" />
  </files>
</package>
